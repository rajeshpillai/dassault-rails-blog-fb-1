<h1>Welcome Rails Blog</h1>

<%= hello %>

<%= paginate @posts %>

<div>
  <%= form_with(url: post_search_path, method: :get, local:true) do %>
    <%= text_field_tag(:q, params[:q], placeholder: "search posts") %>
    <%= submit_tag "Search"%>
  <% end %>
</div>

<% @posts.each do |post| %>
  <div class="card mb-3">
    <div class="card-body">
      <div class="d-flex align-items-center justify-content-between ">
        <h4><%= post.title %></h4>
        <h6><%= post.category.name %></h6>
      </div>
      <div>
        <%# post.body.to_plain_text[0..200] %>
        <%= post.body %>
      </div>
    </div>
    <div class="card-footer">
      
      <span>Published <%= time_ago_in_words(post.created_at) %> ago</span>
      <span> by <%= post.user.email %></span>

      <%= link_to "read more", post_read_path(post) %>

      <div class="d-flex justify-content-start">
        <% post.tags.each do |tag|%>
          <span class="badge badge-warning mr-2">
            <%= link_to tag.name, tag_search_path(tag.name)  %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>