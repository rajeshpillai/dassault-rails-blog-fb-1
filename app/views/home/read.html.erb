<div class="container animate__animated animate__lightSpeedInRight">
  <div class="d-flex justify-content-between align-items-center">
    <h2><%= @post.title %></h2>
    <span class="badge badge-info">
      <%= @post.category.name %> 
    </span>
  </div>
  <div>
    <%= @post.body %>
  </div>

  <hr/>

  <div class="row mt-3">
    <div class="col-md-12">
      <h4>Start Conversations</h2>
      <%= form_with url: comments_url(@post), local:true, scope: "comment" do |form|%>
        <div class="form-group">
          <label>Title</label>
          <%= form.text_field :title, class: "form-control"%>
        </div>
        <div class="form-group">
          <label>What do you want to say?</label>
          <%= form.text_area :content, class: "form-control"%>
        </div>
        <div>
          <%= form.submit %>
        </div>
      <% end %>

    </div>
  </div>


  <div class="row mt-3">
    <div class="col-md-12">
        <h4>Conversations</h4>
    </div>
  </div>

  <% @post.comments.order("created_at desc").each do |comment| %>
    <div class="container">
      <div class="row card mb-3 p-2">
        <div class="col-md-12">
          <header style="background-color: #ddd;padding:4px"><%= comment.title %></header>
          <article>
            <%= comment.content %>
          </article>
          <footer class="text-muted mt-2">
            commented by <%= comment.user.email %> about <%= time_ago_in_words(comment.created_at) %> ago.
          </footer>
        </div>
      </div>
    </div>
  <% end %>

  <%= link_to "back", root_url %>
</div>